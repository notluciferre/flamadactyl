# Admin Configuration
NEXT_PUBLIC_ADMIN_EMAIL=admin@flamahost.id
NODE_SECRET_KEY=cn-12345678abcdefghij

# ========================================
# Firebase Client Configuration
# ========================================
# Public variables - exposed to browser
# Get these from Firebase Console > Project Settings > General

NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.asia-southeast1.firebasedatabase.app
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ========================================
# Firebase Admin SDK Configuration
# ========================================
# SERVER-SIDE ONLY - KEEP SECRET!
# Get from Firebase Console > Project Settings > Service Accounts > Generate New Private Key

# Individual Credentials (Required for Vercel deployment)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIE...\n-----END PRIVATE KEY-----\n"
